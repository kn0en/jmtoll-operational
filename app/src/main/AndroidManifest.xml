<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kn0en.jmoperational">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:icon="@drawable/jmtoll_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/jmtoll_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:allowBackup="true">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"/>

        <activity
            android:name=".UserRequestActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"/>

        <activity
            android:name=".MyProfileActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"/>

        <activity
            android:name=".UpdatePasswordActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"/>

        <activity
            android:name=".HistorySingleActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"/>

        <activity
            android:name=".HistoryActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"/>

        <activity
            android:name=".UserRequestSingleActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"/>

        <activity
            android:name=".OfficerAvailableSingleActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"/>

        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>